@model List<Sistema_MVC_Web2.Models.EvidenciaActividad>

@{
    ViewBag.Title = "Index";
}


<div class="card">
    <h5 class="card-header">Lista de Evidencia Actividad</h5>
    <div class="card-body">
        <div class="text-right">
            <a href="~/EvidenciaActividad/AgregarEditar/" class="btn btn-primary text-right">Nuevo Registro</a>
        </div>
        <br />

        <table id="example" class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre Actividad</th>
                    <th>Archivo</th>
                    <th>Tamaño</th>
                    <th>Tipo</th>
                    <th>Descripcion</th>
                    <th style="width:250px">Acciones</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@(s.evidenciaactividad_id)</td>
                        <td>@(s.Actividad.nombre)</td>
                        <td>@(s.archivo)</td>
                        <td>@(s.tamanio)</td>
                        <td>@(s.tipo)</td>
                        <td>@(s.descripcion)</td>
                        <td style="text-align:center;">
                            <a href="~/EvidenciaActividad/Visualizar/@s.evidenciaactividad_id" class="btn btn-xs btn-warning btn-sm">Visualizar</a>
                            <a href="~/EvidenciaActividad/AgregarEditar/@s.evidenciaactividad_id" class="btn btn-xs btn-primary btn-sm">Modificar</a>
                            <a href="~/EvidenciaActividad/Eliminar/@s.evidenciaactividad_id" class="btn btn-xs btn-danger btn-sm" onclick="return confirm('¿Estas seguro qu desea eliminar?');">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>