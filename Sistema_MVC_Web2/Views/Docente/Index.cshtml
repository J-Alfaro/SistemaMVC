@model List<Sistema_MVC_Web2.Models.Docente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="card">
    <h5 class="card-header">Lista de Docentes</h5>
    <div class="card-body">
        <div class="text-right">
            <a href="~/Docente/AgregarEditar/" class="btn btn-primary text-right">Nuevo Registro</a>
        </div>
        <br />
        <table id="example" class="table table-hover">
            <thead>
                <tr>
                    <th style="width:20px">Id</th>
                    <th style="width:50px">Dni</th>
                    <th style="width:100px">Apellidos</th>
                    <th style="width:50px">Nombre</th>
                    <th style="width:50px">Email</th>
                    <th style="width:40px">Foto</th>
                    <th style="width:20px">Estado</th>
                    <th style="width:300px">Acciones</th>


                </tr>
            </thead>

            <tbody>
                @foreach (var s in Model)
                {
                <tr>
                    <td>@(s.docente_id)</td>
                    <td>@(s.dni)</td>
                    <td>@(s.apellido)</td>
                    <td>@(s.nombre)</td>
                    <td>@(s.email)</td>
                    <td><img src="~/Imagenes/@s.foto" width="50" height="50" /></td>
                    @if (s.estado == "A")
                    {
                        <td><span class="badge badge-success">Activo</span></td>
                    }
                    else
                    {
                        <td><span class="badge badge-danger">Inactivo</span></td>
                    }
                    <td style="text-align:center;">
                        <a href="~/Docente/Visualizar/@s.docente_id" class="btn btn-xs btn-warning btn-sm">Visualizar</a>
                        <a href="~/Docente/AgregarEditar/@s.docente_id" class="btn btn-xs btn-primary btn-sm">Modificar</a>
                        <a href="~/Docente/Eliminar/@s.docente_id" class="btn btn-xs btn-danger btn-sm" onclick="return confirm('¿Estas seguro qu desea eliminar?');">Eliminar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


