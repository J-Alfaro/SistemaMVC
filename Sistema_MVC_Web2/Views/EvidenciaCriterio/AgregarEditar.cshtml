@model Sistema_MVC_Web2.Models.EvidenciaCriterio
@{


    List<Sistema_MVC_Web2.Models.Criterio> criterio = ViewBag.Criterio;

}

<h2>Agregar / Editar</h2>

<ol class="breadcrumb">
    <li><a href="~/ControlAsignacion">ControlAsignacion</a></li>
    
</ol>
@using (Html.BeginForm("Guardar", "EvidenciaCriterio", FormMethod.Post, new { id = "frm-controlasignacion" }))
{
    @Html.HiddenFor(x => x.evidencia_id)
    <div class="panel panel-default">
        <div class="paneñ-heading">Informacion del ControlAsignacion</div>
        <div class="panel-body">

            <div class="form-group">
                @Html.Label("id:")
                @Html.TextBoxFor(x => x.evidencia_id, new { @class = "form-control", disabled = true })
            </div>


            <div class="form-group">
                @Html.Label("Criterio:")
                <select name="criterio_id" class="form-control">
                    <option @(Model.criterio_id.Equals("") ? "selected" : "") value="">-Seleccione-</option>
                    @foreach (var p in criterio)
                    {
                        <option @(Model.criterio_id.Equals(p.criterio_id) ? "selected" : "") value="@p.criterio_id">@p.nombre_spanish</option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.criterio_id, null, new { @class = "label label-danger" })
            </div>


            <div class="form-group">
                @Html.Label(" Archivo:")
                @Html.TextBoxFor(x => x.archivo, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.archivo, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label(" Tamaño:")
                @Html.TextBoxFor(x => x.tamanio, new { @class = "form-control" })
               
            </div>


            <div class="form-group">
                @Html.Label(" Tipo:")
                @Html.TextBoxFor(x => x.tipo, new { @class = "form-control" })
                
            </div>

            <div class="form-group">
                @Html.Label(" DEscripcion:")
                @Html.TextBoxFor(x => x.descripcion, new { @class = "form-control" })
              
            </div>

        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/EvidenciaCriterio" class="btn btn-danger">Cancelar</a>
    </div>
}
