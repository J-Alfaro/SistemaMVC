@model List<Sistema_MVC_Web2.Models.Semestre>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 class="card" text-center>Gestion de Semestres</h2>

<br />
<div class="text-right">
    <a href="~/Semestre/AgregarEditar/" class="btn btn-secondary text-right">Nuevo Registro</a>
</div>
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width:50px">Id</th>
            <th style="width:100px">Semestre</th>
            <th style="width:70px">Año</th>
            <th style="width:80px">Estado</th>
            <th style="width:200px">Acciones</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <th>@(s.semestre_id)</th>
                <th>@(s.nombre)</th>
                <th>@(s.anio)</th>
                <th>@(s.estado == "A" ? "Activo" : "Inactivo")</th>
                <th style="text-align:center;">
                    <a href="~/Semestre/Visualizar/@s.semestre_id" class="btn btn-xs btn-warning">Visualizar</a>
                    <a href="~/Semestre/AgregarEditar/@s.semestre_id" class="btn btn-xs btn-primary">Modificar</a>
                    <a href="~/Semestre/Eliminar/@s.semestre_id" class="btn btn-xs btn-danger" onclick="return confirm('¿Estas seguro qu desea eliminar?');">Eliminar</a>
                </th>
            </tr>
        }
    </tbody>
</table>

