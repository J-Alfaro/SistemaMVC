@model Sistema_MVC_Web2.Models.Criterio
@{
    ViewBag.Title = "Visualizar";
}

<h2>Visualizar</h2>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Criterio/Index">Criterio</a>
        </li>
        <li class="breadcrumb-item" active>@Model.descripcion</li>

    </ol>

</nav>
<div class="card">
    <div class="card-header">
        Informacion detallada del criterio

    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>Id</dt>
            <dd>@Model.criterio_id</dd>
            @*<dt>Docente</dt>
                <dd>@Model.Docente.apellido , @Model.Docente.nombre</dd>*@
            @*<dt>Criterio</dt>
                <dd>@Model.nombre</dd>
                <dt>Nivel</dt>
                <dd>@Model.nivel</dd>
                <dt>Avatar</dt>
                <dd>@Model.avatar</dd>*@
            <dt>Modelo</dt>
            <dd>@Model.Modelo.nombre</dd>
            <dt>Nombre Español</dt>
            <dd>@Model.nombre_spanish</dd>
            <dt>Nombre Ingles</dt>
            <dd>@Model.nombre_english</dd>
            <dt>Descripcion</dt>
            <dd>@Model.descripcion</dd>
            <dt>Estado</dt>
            <dd>@(Model.estado == "A" ? "Activo" : "Inactivo")</dd>

        </dl>

    </div>

</div>

