@model List<Sistema_MVC_Web2.Models.Modelo>
@{
    Layout = null;
    //ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="card">
    <h5 class="card-header">Lista de Modelos</h5>
    <div class="card-body">
        <div class="text-right">
            <a href="~/Modelo/AgregarEditar/" class="btn btn-primary text-right">
                Nuevo registro
            </a>
        </div>
        <br />
        <table id="example" class="table table-hover">
            <thead>
                <tr>
                    <th>ID  </th>
                    <th>nombre  </th>
                    <th>descripcion  </th>
                    <th>Estado  </th>
                    <th style="width:250px">Acciones</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    if (s.modelo_id == Convert.ToInt32(ViewBag.id))
                    {
                    <tr>
                        <td>@(s.modelo_id)</td>
                        <td>@(s.nombre)</td>
                        <td>@(s.descripcion)</td>
                        @if (s.estado == "A")
                        {
                            <td><span class="badge badge-success">Activo</span></td>
                        }
                        else
                        {
                            <td><span class="badge badge-danger">Inactivo</span></td>
                        }
                        <td style="align-content:center">
                            <a href="~/Modelo/Visualizar/@s.modelo_id" class="btn btn-xs btn-warning btn-sm">Visualizar</a>
                            <a href="~/Modelo/AgregarEditar/@s.modelo_id" class="btn btn-xs btn-primary btn-sm">Modificar</a>
                            <a href="~/Modelo/Eliminar/@s.modelo_id" class="btn btn-xs btn-danger btn-sm" onclick="return confirm('¿Esta Seguro de Eliminar.........?');">Eliminar</a>
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


