@model Sistema_MVC_Web2.Models.Usuario
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div id="yo" class="page">


    <div class="card">
        <h5 class="card-header">Mi Perfil Personal</h5>
        <div class="card-body">
            @using (Html.BeginForm("Actualizar", "Perfil", FormMethod.Post))
            {

                <div role="tabpanel" class="active" id="info">
                    <div class="form-group">

                        @Html.HiddenFor(x => x.usuario_id)
                        @Html.Label("Usuario")
                        @Html.TextBoxFor(x => x.nombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.nombre, null, new { @class = "text-danger" })
                        <img src="~/Imagenes/@Model.avatar" width="150" height="150" />

                    </div>
                    <br />
                    <div class="form-group">
                        <label>Foto:</label>
                        <input type="file" name="Foto" />
                    </div>
                </div>

                <div class="text-right">
                    <button data-ajax="true" class="btn btn-primary">Grabar</button>
                    <a href="~/Home" class="btn btn-danger">Cancelar</a>
                </div>
            }
        </div>
    </div>


    
</div>
