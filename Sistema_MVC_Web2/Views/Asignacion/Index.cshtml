@model List<Sistema_MVC_Web2.Models.Asignacion>
@{
    ViewBag.Title = "Index";
}

<div class="card">
    <h5 class="card-header">Lista de Asignaciones</h5>
    <div class="card-body">
        <div class="text-right">
            <a href="~/Asignacion/AgregarEditar/" class="btn btn-primary text-right">
                Nuevo registro
            </a>
        </div>
        <br />
        <table id="example" class="table table-hover">
            <thead>
                <tr>
                    <th style="width:50px">ID  </th>
                    <th style="width:100px">Semestre  </th>
                    <th style="width:70px">Asignacion  </th>
                    <th style="width:80px">Fecha  </th>
                    <th style="width:80px">Estado  </th>
                    @*<th style="width:80px">Detalle Asignacion  </th>
                    <th style="width:80px">Docente  </th>
                    <th style="width:80px">Criterio  </th>
                    <th style="width:80px">Estado  </th>*@
                    <th style="width:200px">Acciones  </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                <tr>
                    <td>@(a.asignacion_id)</td>
                    <td>@( a.Semestre.nombre)</td>
                    <td>@(a.titulo)</td>
                    <td>@(a.fecharegistro)</td>
                    @if (a.estado == "A")
                    {
                        <td><span class="badge badge-success">Activo</span></td>
                    }
                    else
                    {
                        <td><span class="badge badge-danger">Inactivo</span></td>
                    }
                    <td style="align-content:center">
                        <a href="~/Asignacion/Visualizar/@a.asignacion_id" class="btn btn-xs btn-warning btn-sm">Visualizar</a>
                        <a href="~/Asignacion/AgregarEditar/@a.asignacion_id" class="btn btn-xs btn-primary btn-sm">Modificar</a>
                        <a href="~/Asignacion/Eliminar/@a.asignacion_id" class="btn btn-xs btn-danger btn-sm" onclick="return confirm('¿Esta Seguro de Eliminar.........?');">Eliminar</a>
                    </td>
                    @*<th>@(a.DetalleAsignacion.detalleasignacion_id)</th>
        <th>@(a.DetalleAsignacion.Docente)</th>
        <th>@(a.DetalleAsignacion.Docente)</th>
        <th>@(a.DetalleAsignacion.Criterio)</th>*@
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

